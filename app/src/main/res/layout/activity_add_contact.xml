<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.client.finalproject.AddContact">

   <android.support.design.widget.TextInputLayout
       android:id="@+id/sname"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:layout_editor_absoluteX="8dp"
       tools:layout_editor_absoluteY="16dp">

      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Please Enter Your Sur Name" />
   </android.support.design.widget.TextInputLayout>
   <android.support.design.widget.TextInputLayout
       android:id="@+id/oname"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/sname"
       tools:layout_editor_absoluteX="8dp"
       tools:layout_editor_absoluteY="16dp">

      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Please Enter Your Other Name" />
   </android.support.design.widget.TextInputLayout>
   <android.support.design.widget.TextInputLayout
       android:id="@+id/pnumber"
       android:layout_width="match_parent"
       android:layout_below="@id/oname"
       android:layout_height="wrap_content"
       tools:layout_editor_absoluteX="8dp"
       tools:layout_editor_absoluteY="16dp">

      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Please Enter Your Phone Number" />
   </android.support.design.widget.TextInputLayout>
   <android.support.design.widget.TextInputLayout
       android:id="@+id/email"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       tools:layout_editor_absoluteX="8dp"
       android:layout_below="@+id/pnumber"
       tools:layout_editor_absoluteY="16dp">

      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Please Enter Your Email" />
   </android.support.design.widget.TextInputLayout>

   <Button
       android:id="@+id/button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/email"
       android:layout_marginLeft="101dp"
       android:layout_marginStart="101dp"
       android:layout_marginTop="44dp"
       android:gravity="center_horizontal"
       android:text="Add Contact" />
</RelativeLayout>
